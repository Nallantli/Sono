load "system";
load "rule";

# German devoicing of final consonant, just a silly example to demonstrate using "#"
var rule = S |> [-|syl, +|cons, +|voice, -|nasal] -> [-|voice] // null ~ "#";

var words = {
	`bʊn.dəs.taːg`,
	`bʊn.dəs.taː.gə`
};

var applied = words.apply(rule);

i in {0 until len words} do {
	println("/" + str words[i] + "/ -> [" + str applied[i] + "]");
}