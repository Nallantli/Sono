import "LIB_Graphics";

struct Window class {
	var width;
	var height;
	var window;
	var graphics;

	init(final title, final width, final height, final closefunction) => {
		this.width = width;
		this.height = height;
		this.window = ("LIB_Graphics.INIT" _OUTER_CALL_ (title, width, height, closefunction));
	}

	show() => {
		"LIB_Graphics.SHOW" _OUTER_CALL_ (this.window);
	}

	hide() => {
		"LIB_Graphics.HIDE" _OUTER_CALL_ (this.window);
	}

	resize(final width, final height) => {
		"LIB_Graphics.SETSIZE" _OUTER_CALL_ (window, width, height);
		this.width = width;
		this.height = height;
	}

	close() => {
		"LIB_Graphics.CLOSE" _OUTER_CALL_ (this.window);
		this.window = null;
	}

	getGraphics() => {
		this.graphics == null then {
			this.graphics = new Graphics("LIB_Graphics.GETGRAPHICS" _OUTER_CALL_ (this.window));
		}
		return this.graphics;
	}

	repaint() => {
		"LIB_Graphics.REPAINT" _OUTER_CALL_ (this.window);
	}

	onMouseMove(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (0, mousef);
	}

	onMouseDrag(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (1, mousef);
	}

	onMouseRelease(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (2, mousef);
	}

	onMousePress(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (3, mousef);
	}

	onMouseExit(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (4, mousef);
	}

	onMouseEnter(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (5, mousef);
	}

	onMouseClick(final function) => {
		var mousef = (a, b, c, d, e, f, g) => {
			return function(new MouseEvent(a, b, c, d, e, f, g));
		}
		"LIB_Graphics.ADDMOUSELISTENER" _OUTER_CALL_ (6, mousef);
	}

	onKeyPress(final function) => {
		var keyf = (a, b, c) => {
			return function(new KeyEvent(a, b, c));
		}
		"LIB_Graphics.ADDKEYLISTENER" _OUTER_CALL_ (0, keyf);
	}

	onKeyRelease(final function) => {
		var keyf = (a, b, c) => {
			return function(new KeyEvent(a, b, c));
		}
		"LIB_Graphics.ADDKEYLISTENER" _OUTER_CALL_ (1, keyf);
	}

	onKeyType(final function) => {
		var keyf = (a, b, c) => {
			return function(new KeyEvent(a, b, c));
		}
		"LIB_Graphics.ADDKEYLISTENER" _OUTER_CALL_ (2, keyf);
	}

	struct Graphics class {
		var graphics;

		init(final graphics) => {
			this.graphics = graphics;
		}

		add(final shape) => {
			var success = ("LIB_Graphics.GRAPHICS.ADD" _OUTER_CALL_ (this.graphics, shape.data));
			success == false then {
				throw "Shape already exists in Graphics";
			}
		}

		remove(final shape) => {
			"LIB_Graphics.GRAPHICS.REMOVE" _OUTER_CALL_ (this.graphics, shape.data);
			success == false then {
				throw "Shape does not exist in Graphics";
			}
		}
	}

	struct MouseEvent class {
		var button;
		var clickCount;
		var modifiers;
		var x;
		var y;
		var screenX;
		var screenY;

		init(final button, final clickCount, final modifiers, final x, final y, final screenX, final screenY) => {
			this.button = button;
			this.clickCount = clickCount;
			this.modifiers = modifiers;
			this.x = x;
			this.y = y;
			this.screenX = screenX;
			this.screenY = screenY;
		}

		getStr() => {
			return "(BUTTON=" + str button + ", COUNT=" + str clickCount + ", MODIFIERS=" + str modifiers + ", X=" + str x + ", Y=" + str y + ", SCREEN_X=" + str screenX + ", SCREEN_Y=" + str screenY + ")";
		}
	}

	struct KeyEvent class {
		var charCode;
		var charStr;
		var actionKey;

		init(final charCode, final charStr, final actionKey) => {
			this.charCode = charCode;
			this.charStr = charStr;
			this.actionKey = actionKey;
		}

		getStr() => {
			return "(CODE=" + str charCode + ", STR=" + charStr + ", ISACTION=" + str actionKey + ")";
		}
	}
}

